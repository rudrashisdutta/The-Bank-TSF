<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rudrashisdutta.thebank">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_the_bank"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_the_bank_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TheBank">
        <activity
            android:name=".PaymentActivity"
            android:exported="false" />
        <activity
            android:name=".ui.TransactionActivity"
            android:exported="false" />
        <activity
            android:name=".ui.CustomerActivity"
            android:exported="true" />
        <activity
            android:name=".ui.fragments.TransactionListItem"
            android:exported="false">
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.fragments.CustomerListItem"
            android:exported="false">
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>